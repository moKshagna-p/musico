{
  "name": "musico",
  "private": true,
  "version": "0.0.0",
  "packageManager": "bun@1.2.18",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "preview": "turbo run preview --filter=@musico/web",
    "dev:web": "turbo run dev --filter=@musico/web",
    "dev:api": "turbo run dev --filter=@musico/api",
    "start:api": "turbo run start --filter=@musico/api"
  },
  "devDependencies": {
    "turbo": "^2.5.6"
  }
}
